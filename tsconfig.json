{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "outDir": "./dist/",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@web-std/file-url": [
        "src/url.js"
      ],
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src",
    "test"
  ]
}
